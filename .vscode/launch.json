{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "main",
            "type": "cppdbg",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "request": "launch",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build: render3d-test",
            "program": "${workspaceFolder}/render3d-test.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                // {
                //     "description": "Enable break on all exceptions",
                //     "text": "catch throw",
                //     "ignoreFailures": true
                // }
            ],
        },
        {
            "name": "test",
            "type": "cppdbg",
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "request": "launch",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build: test",
            "program": "${workspaceFolder}/test.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                // {
                //     "description": "Enable break on all exceptions",
                //     "text": "catch throw",
                //     "ignoreFailures": true
                // }
            ],
        },
    ],
}