{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build: render3d-test",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "g++",
            "args": [
                // "-O3", // Optimization
                "-o",
                "render3d-test.exe",
                "./src/*.cpp",
                "-g",
                "./res/icon.res",
                "-Iinclude",
                "-Iinclude/SDL2",
                "-Llib",
                "-lSDL2main",
                "-lSDL2",
            ],
        },
        {
            "label": "Build and Run: render3d-test",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Build: render3d-test",
            "command": "./render3d-test.exe"
        },
        {
            "label": "Build: test",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "g++",
            "args": [
                "-o",
                "test.exe",
                "test.cpp",
                "-g"
            ],
        },
        {
            "label": "Build and Run: test",
            "group": "build",
            "type": "shell",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Build: test",
            "command": "./test.exe"
        }
    ]
}